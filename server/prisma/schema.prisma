generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Campaign {
  id          Int        @id
  name        String
  advertiser  String

  lineItems   LineItem[]
}

model LineItem {
  id            Int      @id
  campaignId    Int
  name          String
  bookedAmount  Float
  actualAmount  Float
  adjustments   Float

  campaign      Campaign @relation(fields: [campaignId], references: [id])
  history       AdjustmentHistory[]

  @@index([campaignId])
}

model AdjustmentHistory {
  id          Int      @id @default(autoincrement())
  lineItemId  Int
  oldValue    Float
  newValue    Float
  createdAt   DateTime @default(now())
  reason      String?

  lineItem    LineItem @relation(fields: [lineItemId], references: [id], onDelete: Cascade)

  @@index([lineItemId])
}